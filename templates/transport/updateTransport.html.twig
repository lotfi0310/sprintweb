
{% extends 'base.html.twig' %}

{% block content %}
    <section class="contact py-lg-4 py-md-3 py-sm-3 py-3" id="contact">
    <div style="margin-top: 3rem;">
        <div style="margin-top: 3rem;">
            <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
                <h1>Modifier cette offre de transport</h1>
            </div>
        </div>


        <div class="row" style="height: 45rem;">
            <div class="offset-md-2 col-md-8">
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">id</label>
                <div class="col-sm-10">
                    {{ form_widget(f.id,{'attr':{'class':'form-control'}}) }}
                </div>



                    <label for="inputText" class="col-sm-4 col-form-label">type</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-4 col-form-label">Capacite</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.capacite,{'attr':{'class':'form-control'}}) }}

                    </div>
                    <label for="inputText" class="col-sm-4 col-form-label">numéro de chauffeur</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.numchauffeur,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <label for="inputText" class="col-sm-4 col-form-label">Immatricule</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.immatricule,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Disponabilité</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.dispo,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Lieu de disponabilité</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.lieudispo,{'attr':{'class':'form-control'}}) }}
                    </div>


                <br>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.Confirmer,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

            </div>

        </div>



    </div>
    </section>


{% endblock %}