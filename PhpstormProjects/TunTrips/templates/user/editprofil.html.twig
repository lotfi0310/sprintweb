{% extends 'front_office/base.html.twig' %}
{% block content  %}
<head>
    <title>Edit Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>



<div style= " padding-top: 15rem;  color: #f3f3f3; background-color: #4c91ad ;"
     class="container-xxl border-width-2">
    <div class="row">
        <div class="col-sm-10"></div>
    </div>
    <div  style="height: 65rem;" class="row">
        <div class="col-sm-3"><!--left col-->


            <div class="text-center">
                <img  src="{{ asset('uploads/images/')}}{{ data.photo }}"  alt="avatar" class="avatar img-circle img-thumbnail">

                <h3 style="font-size: 50px;">{{ data.nom }} {{ data.prenom }}</h3>
            </div>


        </div><!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Home</a></li>


            </ul>


            <div class="tab-content">
                <div class="tab-pane active" id="home">


                    <form class="form" action="{{ path('editprofileuser') }}" method="post"
                           id="registrationForm">

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name"><h4>First name</h4></label>
                                <input type="text" class="form-control" name="first_name" id="first_name" value="{{ data.nom }}" title="enter your first name if any.">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="last_name"><h4>Last name</h4></label>
                                <input type="text" class="form-control" name="last_name" id="last_name" value="{{ data.prenom }}" title="enter your last name if any.">
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="phone"><h4>Phone</h4></label>
                                <input type="text" class="form-control" name="phone" id="phone" value="{{  data.numTel }}" title="enter your phone number if any.">
                            </div>
                        </div>


                        <div class="form-group">
                        <div class="col-xs-6">
                            <div class="col-xs-6">
                                <input type="hidden" class="form-control" name="role" id="role" value="{{ data.role }}" title="enter your last name if any.">
                            </div>
                        </div>
                        </div>


                        <div class="form-group">
                        <div class="col-xs-6">
                            <label for="last_name"><h4></h4></label>
                            <input type="hidden" class="form-control" name="p" id="p" value="{{ data.passwd }}" title="enter your last name if any.">
                        </div></div>

                        <div class="form-group">
                        <div class="col-xs-6">
                            <input type="hidden" class="form-control" name="valide" id="etat" value="{{ data.valide }}" title="enter your last name if any.">
                        </div>
                         </div>
                        <div class="form-group">
                        <div class="col-xs-6">
                            <input type="hidden" class="form-control" name="etat" id="etat" value="{{ data.etat }}" title="enter your last name if any.">
                            <div>
                                <input type="hidden" id="iduser" name="iduser" value="{{ data.id }}">
                            </div>
                        </div>
                            <div class="col-xs-6">
                                <input type="hidden" class="form-control" name="email" id="email" value="{{ data.email }}" title="enter your last name if any.">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for=""><h4>Country</h4></label>
                                <input type="text" class="form-control" id="country" name="country" value="{{ data.country }}" title="enter a location">
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                            </div>
                        </div>
                    </form>


                </div><!--/tab-pane-->



    </div><!--/col-9-->
</div><!--/row-->
{% endblock %}