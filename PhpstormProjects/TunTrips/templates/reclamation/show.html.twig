{% extends 'back_office/base.html.twig' %}

{% block content %}

<section class="contact py-lg-4 py-md-3 py-sm-3 py-3" id="contact">
    <div style="margin-top: 3rem;">
        <div style="margin-top: 3rem;">
            <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
                <h1>Reclamation</h1>
            </div>
    </div>


 <div class="row" style="height: 30rem;">
     <div class="offset-md-2 col-md-8">
         <table class="table">
             <tbody>
             <tr>
                 <th>ID User </th>
                 <td>{{ reclamation.id }}</td>
             </tr>
             <tr>
                 <th>Idrec</th>
                 <td>{{ reclamation.idrec }}</td>
             </tr>
             <tr>


                 {% if reclamation.idevent !=null %}
                     <th>IdEvenement</th>
                 <td>{{reclamation.idevent }}</td>
                 {% endif %}
             </tr>
             <tr>
                 {% if reclamation.idheberg !=null %}
                     <th>IdHebergement</th>
                     <td>{{reclamation.idheberg }}</td>
                 {% endif %}

                 {% if reclamation.idtransport !=null %}
                     <th>IDTransport</th>
                     <td>{{reclamation.idtransport }}</td>
                 {% endif %}

             </tr>

             <tr>
                 <th>Contenu</th>
                 <td>{{ reclamation.contenu }}</td>
             </tr>
             <tr>
                 <th>Date</th>
                 <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
             </tr>
             <tr>
                 <th>Etat</th>
                 <td>{{ reclamation.etat ? 'Yes' : 'No' }}</td>
             </tr>
             </tbody>
         </table>
         <form class="form-group">
             <BUTTON class="btn-flat"><a href="{{ path('app_reclamation_index') }}">back to list</a></BUTTON>

             <BUTTON><a href="{{ path('app_reclamation_edit', {'idrec': reclamation.idrec}) }}">edit</a></BUTTON>
             {{ include('reclamation/_delete_form.html.twig') }}
         </form>

     </div>

 </div>



    </div>
</section>
{% endblock %}
